<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Body</th>
      <th>Likes count</th>
      <th>Reposts count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.username %></td>
        <td><%= post.body %></td>
        <td><%= post.likes_count %></td>
        <td><%= post.reposts_count %></td>

      
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<br><br>
<br><br>

<div class="container">
  <h1>Chatter</h1>
  <h4>A cable_ready &amp; stimulus_reflex demo</h4>

  <%= render "form" %>

  <% @posts.each do |post| %>
    <div class="card mb-2">
      <div class="card-body">
        <h5 class="card-title text-muted">
          <%= post.username %>
          <small><%= time_ago_in_words post.created_at %> ago</small>
        </h5>
        <div class="card-text lead mb-2"><%= post.body %></div>
          <%= link_to "Repost (#{post.reposts_count})", "#", class: "card-link" %>
          <%= link_to "Like (#{post.likes_count})", "#", class: "card-link" %>

      </div>

    </div>
  <% end %>
</div>
